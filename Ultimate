<div class="card" id="voucher"></div>

<script>
  const now = new Date();
  const endOfDay = new Date();
  endOfDay.setHours(23,59,59,999);

  const voucherDiv = document.getElementById("voucher");

  if (now <= endOfDay) {
    voucherDiv.innerHTML = `
      <div class="valid">✅ VOUCHER VALID</div>
      <div class="discount">10% OFF</div>
      <p>Padel Partner Exclusive</p>
      <p class="small">Valid until today at 11:59 PM</p>
      <p class="small">Show this screen at checkout</p>
    `;
  } else {
    voucherDiv.innerHTML = `
      <div class="expired">❌ VOUCHER EXPIRED</div>
      <p>This offer is no longer valid.</p>
    `;
  }
</script>

